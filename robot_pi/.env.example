# Robot Pi Configuration Example
# Copy to .env and customize

# Network - Base Pi Connection
BASE_PI_IP=192.168.100.1
CONTROL_PORT=5001
VIDEO_PORT=5002
TELEMETRY_PORT=5003

# Camera Configuration
NUM_CAMERAS=3
CAMERA_0=/dev/video0
CAMERA_1=/dev/video2
CAMERA_2=/dev/video4
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=10
CAMERA_QUALITY=60
DEFAULT_CAMERA_ID=0
VIDEO_ENABLED=true

# Sensor Configuration (I2C)
I2C_BUS=1
BNO085_ADDRESS=0x4A
BMP388_ADDRESS=0x77
SENSOR_READ_INTERVAL=0.1

# Motoron Configuration (I2C)
MOTORON_ADDR_0=0x10
MOTORON_ADDR_1=0x11
MOTORON_ADDR_2=0x12
MOTORON_ADDR_3=0x13

# Servo Configuration (GPIO PWM)
SERVO_GPIO_PIN=12
SERVO_FREQ=50
SERVO_MIN_DUTY=2.5
SERVO_MAX_DUTY=12.5

# Safety
WATCHDOG_TIMEOUT=5.0
EMERGENCY_STOP_ENABLED=true

# Telemetry
TELEMETRY_INTERVAL=0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/serpent/robot_pi_bridge.log
