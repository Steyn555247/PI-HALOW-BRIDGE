# Base Pi Configuration Example
# Copy to .env and customize

# Network - Robot Pi Connection
ROBOT_PI_IP=192.168.100.2
CONTROL_PORT=5001
VIDEO_PORT=5002
TELEMETRY_PORT=5003

# Backend Integration
BACKEND_URL=http://localhost:5000
BACKEND_SOCKETIO_URL=http://localhost:5000

# Video Settings
VIDEO_ENABLED=true
VIDEO_BUFFER_SIZE=65536

# Safety
WATCHDOG_TIMEOUT=5.0
RECONNECT_DELAY=2.0
MAX_RECONNECT_ATTEMPTS=0

# Camera
NUM_CAMERAS=3
DEFAULT_CAMERA_ID=0

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/serpent/base_pi_bridge.log
